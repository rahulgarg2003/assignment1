        @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,600;1,100;1,400;1,600&display=swap");
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: "Poppins", sans-serif;
}
body {
  min-height: 100vh;
  min-width: 100vw;
  background: rgb(107, 215, 215);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

h1 span {
  font-style: italic;
}

h1 span:hover {
  color: purple;
  opacity: 0.8;
  transition: color 0.3s ease;
}

.top {
  padding: 50px;
  min-width: 100vw;
  display: flex;
  justify-content: space-between;
}

.topleft,
.topright {
  display: flex;
}

.topright {
  width: 30vw;
  justify-content: space-between;
  align-items: center;
}

.topright a {
  text-decoration: none;
  color: rgb(31, 30, 28);
}

.topright a:hover {
  color: purple;
  opacity: 0.8;
  transition: color 0.3s ease;
}

.carddiv {
  color: rgb(18, 17, 16);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 3rem;
}

.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: auto;
  grid-template-areas: "pl1 pl2 pl3";
  justify-content: center;
  align-items: center;
  grid-gap: 3rem;
}

.pl1 {
  grid-area: pl1;
}

.pl2 {
  grid-area: pl2;
}
.pl3 {
  grid-area: pl3;
}

.pl1,
.pl2,
.pl3 {
  width: 27vw;
  height: fit-content;
  padding: 30px;
  background-color: rgba(255, 255, 255);
  border-radius: 8px;
 
}

.grid img {
  border-radius: 5px;
  width: 100%;
  height: 30vh;
}

.grid a {
  text-decoration: none;
  color: rgb(15, 15, 14);
}
    </style>
  </head>
